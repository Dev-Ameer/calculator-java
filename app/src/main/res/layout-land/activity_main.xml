<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/numberView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:text="000000000000"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <Button
        android:id="@+id/butnC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_but"
        android:text="C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/butnplasandminas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/butnC"
        android:background="@drawable/bg_but"
        android:text="+/-"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/butnmea"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/butnplasandminas"
        android:background="@drawable/bg_but"
        android:text="%"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttasem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/butnmea"
        android:background="@drawable/bg_but2"
        android:text="รท"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/seven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/butnplasandminas"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/six"
        android:background="@drawable/bg_but3"
        android:text="7"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/butnmea"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/seven"
        android:background="@drawable/bg_but3"
        android:text="8"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttasem"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/eight"
        android:background="@drawable/bg_but3"
        android:text="9"
        android:textColor="#fff"
        android:textSize="20sp" />


    <Button
        android:id="@+id/butmult"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/buttasem"
        android:background="@drawable/bg_but2"
        android:text="ร"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/seven"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/five"
        android:background="@drawable/bg_but3"
        android:text="4"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/five"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/six"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_but3"
        android:text="5"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/six"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/butnC"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_but3"
        android:text="6"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/minse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/butmult"
        android:background="@drawable/bg_but2"
        android:text="-"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_below="@+id/butmult"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/nine"
        android:background="@drawable/bg_but3"
        android:text="1"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nine"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/three"
        android:background="@drawable/bg_but3"
        android:text="2"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/eight"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/four"
        android:background="@drawable/bg_but3"
        android:text="3"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/minse"
        android:background="@drawable/bg_but2"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/zero"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_below="@+id/minse"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/one"
        android:background="@drawable/bg_but3"
        android:text="0"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/point"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_below="@+id/plus"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/zero"
        android:background="@drawable/bg_but3"
        android:text="."
        android:textColor="#fff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/equal"
        android:layout_width="50dp"
        android:layout_height="185dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/numberView"
        android:layout_toRightOf="@+id/point"
        android:background="@drawable/bg_but2"
        android:text="="
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        />
</RelativeLayout>
